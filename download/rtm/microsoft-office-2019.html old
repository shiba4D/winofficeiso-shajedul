   <!-- Main Section -->
  <main class="max-w-7xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold text-center mb-10">Microsoft Office Direct Downloads</h1>

    <!-- Grid Layout -->
    <div id="cards-container" class="grid grid-cols-1 md:grid-cols-3 gap-6"></div>
  </main>

  <!-- JavaScript -->
  <script>
    const officeProducts = [
      "Office 2021 Home and Student",
      "Office 2021 Personal",
      "Office 2021 Professional Plus",
      "Word 2021",
      "Excel 2021",
      "PowerPoint 2021",
      "Outlook 2021",
      "Publisher 2021",
      "Access 2021",
      "Project 2021 Standard",
      "Project 2021 Professional",
      "Visio 2021 Standard",
      "Visio 2021 Professional",
      "Office 365 Home Premium",
      "Office 365 Business",
      "Office 365 Professional Plus"
    ];

    const languages = {
      "en": { label: "Arabic", url: "https://abc.com/1" },
      "en": { label: "English", url: "https://abc.com/1" },
      "fr": { label: "French", url: "https://bsksksshd.com/khdhw323" },
      "de": { label: "German", url: "https://afkhslkfhsahf.com/8361bksbk" }
    };

    const cardsContainer = document.getElementById("cards-container");

    officeProducts.forEach((product, index) => {
      const id = `product-${index}`;
      const selectId = `lang-select-${id}`;
      const buttonId = `download-btn-${id}`;

      const card = document.createElement("div");
      card.className = "bg-white p-6 rounded-lg shadow";

      card.innerHTML = `
        <h2 class="text-lg font-semibold text-blue-600 mb-2">${product}</h2>
        <label class="block mb-2 text-sm font-medium">Select Language</label>
        <select id="${selectId}" class="w-full mb-4 border rounded p-2" onchange="updateDownloadLink('${id}')">
          <option value="">Choose Language</option>
          ${Object.entries(languages).map(([code, lang]) => `
            <option value="${lang.url}/${index + 1}">${lang.label}</option>
          `).join('')}
        </select>
        <a id="${buttonId}" href="#" target="_blank" class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 disabled">Download Now</a>
      `;

      cardsContainer.appendChild(card);
    });

    function updateDownloadLink(idSuffix) {
      const select = document.getElementById(`lang-select-${idSuffix}`);
      const button = document.getElementById(`download-btn-${idSuffix}`);
      const selectedURL = select.value;

      if (selectedURL) {
        button.href = selectedURL;
        button.classList.remove('disabled');
      } else {
        button.href = "#";
        button.classList.add('disabled');
      }
    }
  </script>

